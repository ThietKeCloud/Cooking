{{#section 'css'}}
<title>Cooking</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/gu0cbp08ls6qbmr0wkd4q8g0i3y11sh9nq2lsem2wvz2wny1/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#txtFullDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
    $("#input-video").fileinput({
        theme: "fa",
        dropZoneEnable: false,
        allowedFileExtensions: ['mp4'],
    });
</script>
<script>
    function validate() {
        if (document.getElementById("input-video").files.length == 0) {
            alert('Please upload video');
            return false;
        }
    }

</script>
{{/section}}
{{>banner}}
<!--================Blog Area =================-->

<section class="blog_area">
    <div class="container">
        <form class="row login_form" onsubmit="return validate()" method="POST" id="frmPostCourse" name="frmPostCourse"
            enctype="multipart/form-data">
            <div class="card w-100">
                <div class="card-header fw-bold text-center"><b> Chỉnh sửa thông tin công thức </b></div>
                <div class="card-body">
                    <div class="col-md-12 form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body">
                                        {{#each course}}
                                        <label for="Namecourse">Tên công thức</label>
                                        <input type="text" class="form-control" id="namecourse" name="namecourse"
                                            placeholder="Tên công thức" onfocus="this.placeholder = ''"
                                            onblur="this.placeholder = 'Namecourse'" value="{{namecourse}}" disabled>
                                        <span style="color: red;" id="cname"><b></b></span>
                                        {{/each}}

                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="txtFullDes">Mô tả</label>
                        <textarea class="form-control" name="Desvideo" id="txtFullDes" cols="30" rows="10"></textarea>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="card">
                            <div class="card-title text-center"><b> Video hướng dẫn </b></div>
                            <div class="file-loading card-body">
                                <input id="input-video" name="input-video" type="file">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    
                    <div class="col-md-12 form-group">
                        <button type="submit" value="submit" class="button button-primary float-right">Lưu</button>

                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
