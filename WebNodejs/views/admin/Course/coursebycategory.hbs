<div class="card">
    <h5 class="card-header d-flex justify-content-between">
        <div class="dropdown">
            <button class="btn btn_sort dropdown-toggle" type="button" data-toggle="dropdown">Theo loại công thức
                <span class="caret"></span></button>
            <ul class="dropdown-menu">
                <li class="sort_inactive">
                    <p >Theo loại công thức</p>
                </li>
                <li class="sort_active"><a href="/admin/allbyteacher">Theo người đăng</a></li>

            </ul>
        </div>
    </h5>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-sm-3">



                {{#each lcCategories}}
                <div class="sidebar-filter">
                    <div class="top-filter-head">{{namecategory}}</div>
                    <ul class="main-categories">
                        <li class="common-filter">
                            <form action="#">
                                <div class="btn-group-vertical w-100">
                                    {{#each level2}}
                                    <a href="/admin/bytopic/{{categoryid}}/{{id}}"
                                        class="list-group-item list-group-item-action {{#if isActive}}active{{/if}}">
                                        {{nametopic}}
                                    </a>
                                    {{/each}}
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
                {{/each}}



            </div>
            <div class="col-sm-9">
                {{#if this.empty}}
                <div class="card-body">
                    <p class="card-text">Không có dữ liệu.</p>
                </div>
                {{else}}
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên công thức</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Số lượt xem</th>
                                <th scope="col">Đánh giá</th>

                                <th scope="col">&nbsp;</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.course}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{namecourse}}</td>
                                <td>{{price}}</td>
                                <td>{{view}}</td>
                                <td>{{rating}}</td>
                                {{#if lock}}
                                <td class="text-right">
                                    <a name="" id="" class="btn btn-sm btn_unlock"
                                        href="/admin/unlockcourse2?id={{id}}" role="button" title="Turn off the disable">
                                        <i class="fas fa-lock-open"></i>
                                    </a>
                                </td>

                                {{else}}
                                <td class="text-right">
                                    <a name="" id="" class="btn btn-sm btn_lock" href="/admin/lockcourse2?id={{id}}"
                                        role="button" title="Disable Course">
                                        <i class="fas fa-lock"></i>
                                    </a>
                                </td>
                                {{/if}}


                                
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{/if}}
                <nav style="margin-bottom: 50px;">
                    <ul class="pagination justify-content-center">

                        <li class="page-item {{#unless this.can_go_prev}} disabled {{/unless}}">
                            <a class="page-link" href="?page={{prev_val}}" tabindex="-1" aria-disabled="true">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                            </a>
                        </li>
                        {{#each this.page_items}}
                        {{#if this.isActive}}
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="javascript:;">{{value}}<span class="sr-only">(current)</span></a>
                        </li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item{{#unless this.can_go_next}} disabled{{/unless}}">
                            <a class="page-link" href="?page={{next_value}}">
                                <i class="fa fa-forward" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>