<div class="card">
    <h5 class="card-header d-flex justify-content-between">
        Loại công thức
        <a class="btn btn-outline-success" href="/admin/addcategory" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm loại
        </a>
    </h5>

    {{#if this.empty}}
    <div class="card-body">
        <p class="card-text">Không có dữ liệu.</p>
    </div>
    {{else}}
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tên loại</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>

                </tr>
            </thead>
            <tbody>
                {{#each this.category}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td><a href="/admin/cate?cate={{id}}">{{namecategory}}</a></td>
                    <td class="text-right">
                        <a name="" id="" class="btn btn-sm btn-primary" href="/admin/catego/{{id}}" role="button"
                            title="Edit Category">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                    <td class="text-right">
                        <a name="" id="" class="btn btn-sm btn-primary"
                            href="/admin/addtopic?topi={{id}}&cate={{namecategory}}" role="button" title="Add topic">
                            <i class="fas fa-plus-square"></i>
                        </a>
                    </td>

                    <td>&nbsp;</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
    <nav style="margin-bottom: 50px;">
        <ul class="pagination justify-content-center">

            <li class="page-item {{#unless this.can_go_prev}} disabled {{/unless}}">
                <a class="page-link" href="?page={{prev_val}}" tabindex="-1" aria-disabled="true">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
            </li>
            {{#each this.page_items}}
            {{#if this.isActive}}
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="javascript:;">{{value}}<span class="sr-only">(current)</span></a>
            </li>
            {{else}}
            <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
            {{/if}}
            {{/each}}
            <li class="page-item{{#unless this.can_go_next}} disabled{{/unless}}">
                <a class="page-link" href="?page={{next_value}}">
                    <i class="fa fa-forward" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </nav>
    
</div>