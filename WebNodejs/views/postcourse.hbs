<script src="https://cdn.tiny.cloud/1/gu0cbp08ls6qbmr0wkd4q8g0i3y11sh9nq2lsem2wvz2wny1/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#txtFullDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
    $("#input-image").fileinput({
        theme: "fa",
        dropZoneEnable: false,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
    });

    $("#thumbnail").fileinput({
        theme: "fa",
        dropZoneEnable: false,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
    });
    $("#input-video").fileinput({
        theme: "fa",
        dropZoneEnable: false,
        allowedFileExtensions: ['mp4'],
    });
</script>
<script>
    function ValidateForm() {
        var Name = document.frmPostCourse.namecourse.value;
        var price = document.frmPostCourse.price.value;
        var sale = document.frmPostCourse.sale.value;
        if (Name === "") {
            alert(' Please fill out your name course');
            return false;
        }
        else if (price === "" ) {
            alert('Please fill out price of course');
            return false;
        }
        else if (sale === "" ) {
            alert('Please fill out sale of course or if not , please enter 0');
            return false;
        }
        else if (document.getElementById("input-image").files.length == 0) {
            alert('Please upload image');
            return false;
        }
        else if (document.getElementById("input-video").files.length == 0) {
            alert('Please upload video');
            return false;
        }
        else if (document.getElementById("thumbnail").files.length == 0) {
            alert('Please upload thumbnail');
            return false;
        }
        else
            return true;
    }
</script>

