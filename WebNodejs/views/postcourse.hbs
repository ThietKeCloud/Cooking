                                            <option value="1" selected>Xào</option>
                                            <option value="2">Hấp</option>
                                            <option value="3">Luộc</option>
                                            <option value="4">Nướng</option>
                                            <option value="5">Quay</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="card">
                            <div class="card-title text-center"><b> Hình mô tả </b></div>
                            <div class="file-loading card-body">
