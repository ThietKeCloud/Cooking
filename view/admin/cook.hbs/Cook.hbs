<div class="card">
  <a href="/category" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
    aria-expanded="false"><button style="height: 40px;">
      <h5>Teacher</h5>
    </button><a class="btn btn-outline-success" href="/admin/addteacher" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add Teacher
    </a></a>
  <ul class="dropdown-menu">
    <li class="nav-item"><a class="nav-link" href="\admin\student" class="btn btn-secondary dropdown-toggle"
        data-bs-toggle="dropdown" aria-expanded="false">Student</a></li>
    <li class="nav-item"><a class="nav-link" href="\admin\teacher">Teacher</a></li>
  </ul>

  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Fullname</th>
          <th scope="col">Verify</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.user}}
        <tr>
          <th scope="row">{{id}}</th>
          <td>{{username}}</td>
          <td>{{email}}</td>
          <td>{{fullname}}</td>
          <td>{{check}}</td>
           {{#if lock}}
          <td class="text-right">
            <a name="" id="" class="btn btn-sm btn-primary" href="/admin/unlockteacher?id={{id}}" role="button" title="Unlock Teacher">
              <i class="fas fa-lock-open"></i>
            </a>
          </td>

          {{else}}
          <td class="text-right">
            <a name="" id="" class="btn btn-sm btn-primary" href="/admin/lockteacher?id={{id}}" role="button" title="Lock Teacher">
              <i class="fas fa-lock"></i>
            </a>
          </td>
          {{/if}}
          
        </tr>
        {{/each}}
        
      </tbody>
    </table>
     <nav>
      <ul class="pagination justify-content-center">

        <li class="page-item {{#unless this.can_go_prev}} disabled {{/unless}}">
          <a class="page-link" href="?page={{prev_val}}" tabindex="-1" aria-disabled="true">
            <i class="fa fa-backward" aria-hidden="true"></i>
          </a>
        </li>
        {{#each this.page_items}}
        {{#if this.isActive}}
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="javascript:;">{{value}}<span class="sr-only">(current)</span></a>
        </li>
        {{else}}
        <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
        {{/if}}
        {{/each}}
        <li class="page-item{{#unless this.can_go_next}} disabled{{/unless}}">
          <a class="page-link" href="?page={{next_value}}">
            <i class="fa fa-forward" aria-hidden="true"></i>
          </a>
        </li>
      </ul>
    </nav>
  </div>
  {{/if}}

</div>